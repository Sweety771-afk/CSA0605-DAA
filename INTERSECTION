def intersection(nums1, nums2):
    """
    Return the intersection of two arrays, with each element unique.

    Parameters:
    nums1 (list): first integer array
    nums2 (list): second integer array

    Returns:
    list: intersection of nums1 and nums2
    """
    return list(set(nums1) & set(nums2))

# Example usage:
nums1 = [1, 2, 2, 3, 4]
nums2 = [2, 2, 4, 5, 6]
print(intersection(nums1, nums2))  # Output: [2, 4]
